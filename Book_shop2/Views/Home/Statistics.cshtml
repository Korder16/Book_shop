@using Microsoft.AspNetCore.Rewrite.Internal.ApacheModRewrite
@model IEnumerable<user>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html>
<head>
    <title>Статистики</title>
</head>
<body>
<div>
    <h3>Статистика по сотрудникам</h3>
</div>

<table class="table table-striped">
    <tr>
        <td>Имя</td>
        <td>Количество продаж</td>
        <td>Количество заказов</td>
        <td>Процент успешных заказов, %</td>
    </tr>
    @foreach (var statistics in ViewBag.StatOrdersStuff)
    {
        <tr>
            <td>@statistics.Name</td>
            <td>@statistics.PurchasesCount</td>
            <td>@statistics.OrdersCount</td>
            <td>@statistics.OrdersPercent</td>
        </tr>
    }
</table>

<div>
    <h3>Статистика по аптеке</h3>
</div>

<table class="table table-striped">
    <tr>
        <td>Количество продаж</td>
        <td>Количество заказов</td>
        <td>Процент выполнения заказов, %</td>
        <td>Прибыль</td>
        <td>Выручка</td>
    </tr>
    
    @foreach (var statistics in ViewBag.StatOrdersStuff)
    {
        <tr>
            <td>@statistics.Name</td>
            <td>@statistics.PurchasesCount</td>
            <td>@statistics.OrdersCount</td>
            <td>@statistics.OrdersPercent</td>
        </tr>
    }
</table>
</body>
</html>
