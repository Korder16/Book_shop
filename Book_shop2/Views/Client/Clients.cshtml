@model IEnumerable<Book_shop2.Models.client>
@{
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<html>
<head>
    <title>Список клиентов</title>
</head>
<body>
<div>
    <h3>Клиенты</h3>
</div>
<div style="position: fixed; top: 67px; right: 200px;">
    <a href="../Client/AddClient" type="button" class="btn btn-success">Добавить клиента</a>
</div>
<table class="table table-striped">
    <tr>
        <td>Имя</td>
        <td>Телефон</td>
        <td>Email</td>
        <td>Адрес</td>
        <td></td>
    </tr>
    @foreach (var client in Model)
    {
        <tr>
            <td>@client.Name</td>
            <td>@client.Phone</td>
            <td>@client.Email</td>
            <td>@client.Adress</td>
            <td><p><a href="/Client/EditClient/@client.Id" class="btn btn-primary">Редактировать</a></p></td>
        </tr>
    }
</table>
</body>
</html>